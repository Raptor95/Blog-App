<% include partials/header %>

<div class="ui main text container segment">

    <div class = "ui huge header"><%= blog.title %></div>
    <div class = "ui top attached">
        <div class="item">
            <img class="ui centered round image" src="<%= blog.image %>">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
                <div class="description">
                    <p>
                        <%- blog.body %>
                    </p>
                </div>
                <a href="/blogs/<%= blog._id %>/edit" class="ui yellow button">Edit blog</a>
                <form id="deleteForm" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                    <button class="ui red button">Delete blog</button>
                </form>
            </div>
        </div>
    </div>